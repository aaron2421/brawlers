<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="brawler"
            type="com.airasoft.brawlers.model.Brawler" />

        <variable
            name="listBrawlersViewModel"
            type="com.airasoft.brawlers.listbrawlers.ListBrawlersViewModel" />

        <variable
            name="clickListener"
            type="com.airasoft.brawlers.listbrawlers.BrawlerListener" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(brawler)}">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/brawler_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/brawlerImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/brawler_image_desc"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:id="@+id/brawlerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{brawler.brawlerName}"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/brawlerType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{brawler.brawlerType}"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/brawlerClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{brawler.brawlerClass}"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingEnd="10dp">

                    <Button
                        android:id="@+id/editBrawler"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="?attr/colorPrimary"
                        android:paddingStart="9dp"
                        app:icon="@drawable/ic_baseline_edit_24" />

                    <Button
                        android:id="@+id/deleteBrawler"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="?attr/colorError"
                        android:paddingStart="8dp"
                        app:icon="@drawable/ic_baseline_delete_24" />
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>